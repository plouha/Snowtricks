{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

<div class="container-fluid">
    
    <h1 class="my5">Modération des commentaires</h1>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Créé le</th>
                <th>Auteur</th>                
                <th>Commentaire</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
            
            <tr>
                <td>{{comment.createdAt | date('d/m/Y') }}&nbsp;&nbsp; à &nbsp;&nbsp;{{ comment.createdAt | date('H:i') }}</td>
                <td>{{comment.user.pseudo}}</td>
                <td>{{comment.content}}</td>
                <td><a href="{{ path('comment_update', {'id': comment.id}) }}"><img src="{{ asset('upload/crayon.png') }}" data-toggle="tooltip" style="margin-right: 30px";></a> 
                    <a href="{{ path('comment_delete', {'id': comment.id}) }}"><img src="{{ asset('upload/Poubelle.png') }}" data-toggle="tooltip";></a></td>
            </tr>
            
            {% endfor %}            
        </tbody>
    </table>
    
</div>
</br>
</br>
</br>
</br>
{% endblock %}

{% block footer %}
<br>
    <footer class="text-muted">
        <div class="container">
            <a href="{{ path('home', {'_fragment':'album'}) }}" class="btn btn-outline-warning btn-sm float-right">Retour</a>
            <p>Site construit à l'aide de Bootstrap &copy; {{ 'now'|date('Y') }} & Symfony 4 </p>
        </div>
    </footer>
</div>    
{% endblock %}